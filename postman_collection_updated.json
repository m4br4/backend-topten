    "item": [
      {
        "item": [
          {
            "name": "Health Check",
            "request": {
              "url": {
                "raw": "{{baseUrl}}/api/health",
                "host": ["{{baseUrl}}"],
                "path": ["api", "health"]
              },
              "method": "GET",
              "description": "Verificar el estado del sistema"
            },
            "response": []
          },
          {
            "name": "Register",
            "request": {
              "url": {
                "raw": "{{baseUrl}}/api/auth/register",
                "host": ["{{baseUrl}}"],
                "path": ["api", "auth", "register"]
              },
              "body": {
                "raw": "{\n    \"email\": \"test@example.com\",\n    \"password\": \"password123\",\n    \"firstName\": \"Test\",\n    \"lastName\": \"User\",\n    \"roleId\": \"{{roleId}}\"\n}",
                "mode": "raw"
              },
              "header": [
                {
                  "key": "Content-Type",
                  "value": "application/json"
                }
              ],
              "method": "POST",
              "description": "Registrar un nuevo usuario"
            },
            "response": []
          },
          {
            "name": "Login",
            "event": [
              {
                "listen": "test",
                "script": {
                  "exec": [
                    "var jsonData = pm.response.json();",
                    "if (jsonData && jsonData.token) {",
                    "    pm.environment.set(\"authToken\", jsonData.token);",
                    "    pm.environment.set(\"userId\", jsonData.user.id);",
                    "}"
                  ],
                  "type": "text/javascript"
                }
              }
            ],
            "request": {
              "url": {
                "raw": "{{baseUrl}}/api/auth/login",
                "host": ["{{baseUrl}}"],
                "path": ["api", "auth", "login"]
              },
              "body": {
                "raw": "{\n    \"email\": \"admin@example.com\",\n    \"password\": \"admin123\"\n}",
                "mode": "raw"
              },
              "header": [
                {
                  "key": "Content-Type",
                  "value": "application/json"
                }
              ],
              "method": "POST",
              "description": "Iniciar sesión y obtener token JWT"
            },
            "response": []
          },
          {
            "name": "Me",
            "request": {
              "url": {
                "raw": "{{baseUrl}}/api/auth/me",
                "host": ["{{baseUrl}}"],
                "path": ["api", "auth", "me"]
              },
              "header": [
                {
                  "key": "Authorization",
                  "value": "Bearer {{authToken}}"
                }
              ],
              "method": "GET",
              "description": "Obtener información del usuario actual"
            },
            "response": []
          },
          {
            "name": "Logout",
            "request": {
              "url": {
                "raw": "{{baseUrl}}/api/auth/logout",
                "host": ["{{baseUrl}}"],
                "path": ["api", "auth", "logout"]
              },
              "body": {
                "raw": "{\n    \"token\": \"{{authToken}}\"\n}",
                "mode": "raw"
              },
              "header": [
                {
                  "key": "Content-Type",
                  "value": "application/json"
                }
              ],
              "method": "POST",
              "description": "Cerrar sesión"
            },
            "response": []
          }
        ],
        "name": "Auth",
        "description": "Endpoints relacionados con la autenticación"
      },
